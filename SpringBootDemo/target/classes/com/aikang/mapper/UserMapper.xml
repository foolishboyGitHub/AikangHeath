	<select id="isTableExist" parameterType="java.util.Map" resultType="String">
        show TABLES like #{tablename}
      </select>
    <select id="getAllHrsExceptCurrentHr" resultMap="BaseResultMap" statementType="PREPARED">
        select * from ${company}_hr where id !=#{id};
    </select>
    <select id="getAllHrs" resultMap="HrWithRoles" statementType="PREPARED">
        select hr.id, hr.memid, hr.socialnumber, hr.sex, hr.servicecode, hr.name, hr.phone, hr.telephone, hr.address, hr.enabled, hr.username, hr.userface,
        hr.remark,r.`id` as rid,r.`name` as rname,r.`nameZh` as rnameZh from ${company}_hr hr left join ${company}_hr_role hrr on
        hr.`id`=hrr.`hrid` left join role r on hrr.`rid`=r.`id` where hr.`id`!=#{hrid}
        <if test="keywords!=null">
            and hr.name like concat('%',#{keywords},'%')
        </if>
        order by hr.id
    </select>
    <select id="getHrRolesById" resultType="com.aikang.Bean.Role" statementType="PREPARED">
    select r.* from role r,${company}_hr_role hrr where hrr.`rid`=r.`id` and hrr.`hrid`=#{id}
  </select>
    <select id="loadUserByUsername" resultMap="BaseResultMap" statementType="PREPARED">
